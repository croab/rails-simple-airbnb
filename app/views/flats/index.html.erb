<div class="container">
<h1 class='mt-3'>All flats (<%= @flats.length.to_s %>)</h1>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="card col-sm-12 col-md-6 col-lg-4 col-xl-3 m-3" style="width: 18rem;">
        <img class="card-img-top"
              src=<%= flat.image_url %>
              alt="Picture of a house">
        <div class="card-body">
          <h5 class="card-title"><%= flat.name %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= flat.address %></h6>
          <p class="card-text"><strong><i class="fa-solid fa-euro-sign"></i></strong> <%= flat.price_per_night %></p>
          <p class="card-text"><strong><i class="fa-solid fa-person-half-dress"></i></strong> <%= flat.number_of_guests %></p>
        </div>
        <%= link_to "More info", flat_path(flat), class: 'btn btn-primary m-3' %>
        <%= link_to "Edit flat", edit_flat_path(flat), class: 'btn btn-primary mb-3 mx-3' %>
        <%= link_to "Delete flat",
            flat_path(flat),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
            class: 'btn btn-danger mb-3 mx-3' %>
      </div>
    <% end %>
  </div>
</div>
